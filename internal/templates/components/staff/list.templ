// internal/templates/components/staff/list.templ
package staff

import (
	"fmt"
	"sort"
	"strings"
)

templ StaffLayout(staff []Staff) {
	<div class="flex h-[calc(100vh-4rem)]">
		<div class="w-1/2 border-r border-border flex flex-col min-w-[50%]">
			<div class="p-4 border-b border-border bg-background">
				<div id="staff-filters" class="space-y-3">
					<div>
						<input
							type="search"
							name="search"
							placeholder="Search staff..."
							class="w-full px-4 py-2 border border-border rounded-lg"
							hx-get="/api/v1/staff"
							hx-trigger="keyup changed delay:300ms"
							hx-target="#staff-list"
							hx-include="#staff-filters"
						/>
					</div>
					<div class="flex items-center justify-between gap-3">
						<div class="flex gap-2">
							<select
								name="facility_id"
								class="px-3 py-2 border border-border rounded-lg text-sm"
								hx-get="/api/v1/staff"
								hx-target="#staff-list"
								hx-trigger="change"
								hx-include="#staff-filters"
							>
								<option value="">All facilities</option>
								for _, facilityID := range staffFacilityOptions(staff) {
									<option value={fmt.Sprintf("%d", facilityID)}>Facility {fmt.Sprintf("%d", facilityID)}</option>
								}
							</select>
							<select
								name="role"
								class="px-3 py-2 border border-border rounded-lg text-sm"
								hx-get="/api/v1/staff"
								hx-target="#staff-list"
								hx-trigger="change"
								hx-include="#staff-filters"
							>
								<option value="">All roles</option>
								for _, role := range staffRoleOptions(staff) {
									<option value={role}>{role}</option>
								}
							</select>
						</div>
						<button
							class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-700"
							hx-get="/api/v1/staff/new"
							hx-target="#staff-detail"
						>
							Add Staff
						</button>
					</div>
				</div>
			</div>

			<div
				class="flex-1 overflow-y-auto bg-muted"
				id="staff-list"
				hx-get="/api/v1/staff"
				hx-trigger="load, refreshStaffList from:body"
			>
				<div class="flex items-center justify-center p-4 text-muted-foreground">
					Loading staff...
				</div>
			</div>
		</div>

		<div class="w-1/2 h-full min-w-[50%]" id="staff-detail">
			<div class="h-full w-full flex items-center justify-center text-muted-foreground">
				Select a staff member to view details
			</div>
		</div>
	</div>
	<div id="modal"></div>
}

templ StaffList(staff []Staff) {
	if len(staff) == 0 {
		<div class="flex items-center justify-center p-6 text-muted-foreground">
			No staff found
		</div>
	} else {
		for _, member := range staff {
			<div
				class="p-4 border-b border-border hover:bg-background cursor-pointer"
				hx-get={fmt.Sprintf("/api/v1/staff/%d", member.ID)}
				hx-target="#staff-detail"
			>
				<div class="flex items-center justify-between gap-4">
					<div>
						<p class="font-medium text-foreground">{member.FirstName} {member.LastName}</p>
						<p class="text-sm text-muted-foreground">{member.EmailStr()}</p>
					</div>
					<div class="text-right">
						<p class="text-sm text-foreground">{member.RoleStr()}</p>
						<p class="text-sm text-muted-foreground">Facility {member.FacilityStr()}</p>
					</div>
				</div>
			</div>
		}
	}
}

templ StaffDetail(member Staff) {
	<div class="w-full h-full bg-background rounded-lg shadow divide-y divide-border">
		<div class="p-6 border-b border-border">
			<div class="flex items-center justify-between gap-4">
				<div>
					<h2 class="text-xl font-bold text-foreground">Staff Profile</h2>
					<p class="text-muted-foreground">{member.FirstName} {member.LastName}</p>
				</div>
				<div class="flex items-center gap-3">
					<span class="px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
						{member.RoleStr()}
					</span>
					<span class={templ.Classes(
						"px-3 py-1 text-xs font-semibold rounded-full",
						templ.KV("bg-green-100 text-green-800", member.UserStatus == "active"),
						templ.KV("bg-red-100 text-red-800", member.UserStatus == "inactive"),
					)}>
						{member.UserStatus}
					</span>
					<button
						class="px-3 py-1 text-xs font-semibold rounded-full border border-border text-foreground hover:bg-muted"
						hx-get={fmt.Sprintf("/api/v1/staff/%d/edit", member.ID)}
						hx-target="#staff-detail">
						Edit
					</button>
					if member.UserStatus == "active" {
						<button
							class="px-3 py-1 text-xs font-semibold rounded-full border border-red-300 text-red-700 hover:bg-red-50"
							hx-delete={fmt.Sprintf("/api/v1/staff/%d", member.ID)}
							hx-target="#staff-detail">
							Deactivate
						</button>
					}
				</div>
			</div>
		</div>
		<div class="p-6 space-y-6">
			<div>
				<h3 class="text-sm font-semibold text-foreground">Contact</h3>
				<div class="mt-2 space-y-1">
					<p class="text-foreground">{member.EmailStr()}</p>
					<p class="text-foreground">{member.PhoneStr()}</p>
				</div>
			</div>
			<div>
				<h3 class="text-sm font-semibold text-foreground">Home Facility</h3>
				<p class="text-foreground">{member.FacilityStr()}</p>
			</div>
		</div>
	</div>
}

func staffFacilityOptions(staff []Staff) []int64 {
	unique := make(map[int64]struct{})
	for _, member := range staff {
		if !member.HomeFacilityID.Valid {
			continue
		}
		unique[member.HomeFacilityID.Int64] = struct{}{}
	}

	facilityIDs := make([]int64, 0, len(unique))
	for facilityID := range unique {
		facilityIDs = append(facilityIDs, facilityID)
	}

	sort.Slice(facilityIDs, func(i, j int) bool {
		return facilityIDs[i] < facilityIDs[j]
	})

	return facilityIDs
}

func staffRoleOptions(staff []Staff) []string {
	unique := make(map[string]struct{})
	for _, member := range staff {
		role := strings.TrimSpace(member.Role)
		if role == "" {
			continue
		}
		unique[role] = struct{}{}
	}

	roles := make([]string, 0, len(unique))
	for role := range unique {
		roles = append(roles, role)
	}

	sort.Strings(roles)

	return roles
}
